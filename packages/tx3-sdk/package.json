{
  "name": "tx3-sdk",
  "version": "0.7.0",
  "description": "Software Development Kit for the Tx3 Language",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/txpipe/tx3.git"
  },
  "author": "TxPipe",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/txpipe/tx3/issues"
  },
  "homepage": "https://github.com/txpipe/tx3#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "rollup": "^4.34.9",
    "ts-jest": "^29.1.2",
    "tslib": "^2.8.1"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./trp": {
      "import": "./dist/trp/index.esm.js",
      "require": "./dist/trp/index.js",
      "types": "./dist/trp/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "trp": [
        "./dist/trp/index.d.ts"
      ]
    }
  },
  "dependencies": {
    "bech32": "^2.0.0"
  }
}